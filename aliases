# Tmux
alias tl='tmux ls'
alias ta='tmux attach -t'
alias tk='tmux kill-session -t'
alias tn='tmux -2 new -s'
alias mux='tmuxinator'
alias ssh='TERM=xterm-256color ssh'

alias confix='$EDITOR `git diff --name-only | uniq`'
alias conres='git add . --all && git rebase --continue'

# Journaling
alias wmj="jrnl < ~/Google\ Drive\/My\ Drive/.journal-template.md && jrnl -1 --edit"
alias rmj="jrnl --export md | pandoc -t html | browser"

alias ssh='TERM=xterm-256color ssh'

# Fake vim for now
alias vim='nvim'

# Mouse speed hack
alias mousespeed="defaults write -g com.apple.mouse.scaling -float"
